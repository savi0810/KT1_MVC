@{
    ViewData["Title"] = "Edit";
}

<form method="post" action="/Page/Edit" class="shadow-lg p-5 rounded-4 bg-light-subtle border-0">
    <div class="mb-4">
        <label for="message" class="form-label fw-semibold fs-5 text-primary mb-3 d-block">Введите сообщение</label>
        <input class="form-control form-control-lg p-3 rounded-3 border-2 border-primary-subtle" name="message" />
    </div>
    <button class="btn btn-primary btn-lg w-100 p-3 rounded-3 fw-bold shadow-sm" type="submit">Отправить</button>
</form>

